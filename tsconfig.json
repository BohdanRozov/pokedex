{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@features/*": ["src/features/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@theme": ["src/theme/*"],
      "@routes": ["src/routes/index"],
      "@hooks/*": ["src/hooks/*"],
      "@types": ["src/types/index"],
      "@models": ["src/models/index"],
      "@assets/*": ["assets/*"],
      "@src/*": ["src/*"]
    }
  }
}
